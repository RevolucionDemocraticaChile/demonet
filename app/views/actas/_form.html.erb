<%= form_for @acta, html: {class: "form-horizontal"} do |f| %>

	<% if @acta.errors.any? %>
		<div id="error_explanation" class="alert alert-danger">
			<h2><%= pluralize(@acta.errors.count, "error") %> prohibited this acta from being saved:</h2>

			<ul>
			<% @acta.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group">
		<%= f.label :date, class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.date_select :date, :order => [:year, :month, :day], class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :territorio_id, class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<select name="acta[territorio_id]" class="form-control">
				<option value="nil" disabled>Seleccionar Territorio</option>
				<% Territorio.all.each do |territorio| %>
					<% if current_user.admin? || current_user.aterritorios.include?(territorio) %>
						<option value="<%= territorio.id %>"><%= territorio.name %></option>
					<% else %>
						<option value="<%= territorio.id %>"><%= territorio.name %></option>
					<% end %>
				<% end %>
			</select>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "Enviar", class: "btn btn-primary" %>
		</div>
	</div>


<% end %>
