<div class="row">
	<div class="col-lg-8 col-lg-offset-2">
		<h1>Acta <%= @acta.territorio.name %> <%= @acta.date %></h1>

		<p>
			<strong>Date:</strong>
			<%= @acta.date %>
		</p>

		<p>
			<strong>Territorio:</strong>
			<%= link_to @acta.territorio.name, @acta.territorio %>
		</p>

		<% if can? :edit, @user %>
			<%= link_to 'Editar', edit_acta_path(@acta), class: "btn btn-primary" %>
		<% end %>

		<h2>Asistentes</h2>

		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Nombre</th>
				</tr>
			</thead>

			<tbody>
				<% @acta.users.each do |user| %>
					<tr>
						<td>
							<%= link_to user.name, user %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>

		<% if current_user.admin? || current_user.aterritorios.include?(@acta.territorio) %>
			<%= form_for UserActa.new, html: {class: "form-inline"} do |f| %>
				<%= f.hidden_field :acta_id, value: @acta.id %>
				<div class="form-group">
					<label class="sr-only">Nombre del Usuario</label>
					<select name="user_acta[user_id]" class="form-control">
						<option value="nil">Seleccionar Usuario</option>
						<% User.all.each do |user| %>
							<% if @acta.territorio.members.include?(user) %>
								<option value="<%= user.id %>"><%= user.name %></option>
							<% end %>
						<% end %>
					</select>
				</div>
				<div class="form-group">
					<%= f.submit "Agregar", class: "btn btn-primary" %>
				</div>
			<% end %>
		<% end %>


	</div>
</div>
