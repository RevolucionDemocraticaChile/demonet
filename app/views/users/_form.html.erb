<div class="container">
  <ol class="breadcrumb">
    <li > <%= link_to t(:users).humanize, users_path %> </li>
    <% if action_name == 'new' %>
      <li class="active"> <%= t(:add).humanize %></li>
    <% else %>
      <li class="active"> <%= t(:edit).humanize %></li>
    <% end %>
  </ol>
  <div class="row">
    <div class="col-lg-12">

      <div class="panel panel-default">
        <div class="panel-heading clearfix">
          <% if action_name == 'new' %>
            <h4><%= t(:add_user).humanize %></h4>
          <% else %>
            <h4><%= t(:edit_user).humanize %></h4>
          <% end %>
        </div>
        <div class="panel-body">

          <%= form_for @user, html: {class: "form-horizontal"} do |f| %>
            <% if @user.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <h2><%= pluralize(@user.errors.count, "error") %>:</h2>

                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label t(:email), class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :email, class: "form-control", placeholder: t(:email).humanize %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label t(:first_name), class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :first_name, class: "form-control", placeholder: t(:first_name).humanize %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label t(:second_name), class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :second_name, class: "form-control", placeholder: t(:second_name).humanize %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label t(:last_name), class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :last_name, class: "form-control", placeholder: t(:last_name).humanize %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label t(:rut), class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :rut, class: "form-control", placeholder: t(:rut).humanize %>
              </div>
            </div>

            <% if action_name != "new" %>
              <div class="form-group">
                <%= f.label t(:password), class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                  <%= f.password_field :password, class: "form-control", placeholder: t(:password).humanize %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label t(:password_confirmation), class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                  <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(:password_confirmation).humanize %>
                </div>
              </div>
            <% end %>

            <% if current_user.admin? %>
            <div class="form-group">
              <%= f.label t(:administrator), class: "col-sm-2 control-label" %>
              <label>
                <div class="col-sm-10">
                  <%= f.check_box :admin, checked: @user.admin %>
                </div>
              </label>
            </div>
            <% end %>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit t(:create).humanize, class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
