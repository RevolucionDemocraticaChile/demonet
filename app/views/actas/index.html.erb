<div class="row">
	<div class="col-lg-6 col-lg-offset-3">
		<h1>Meetings</h1>

		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Nombre</th>
					<th class="text-center">Asistentes</th>
					<% if current_user.admin? %>
						<th colspan="2"></th>
					<% end %>
				</tr>
			</thead>

			<tbody>
				<% @meetings.each do |meeting| %>
					<tr>
						<td><%= link_to format_meeting_name(meeting), meeting %></td>
						<td class="text-center"><%= meeting.users.count %></td>
						<% if current_user.admin? %>
							<td class="text-center">
								<%= link_to 'Editar', edit_meeting_path(meeting), class: "btn btn-info" %>
							</td>
							<td class="text-center">
								<%= link_to 'Eliminar', meeting, method: :delete, data: { confirm: 'EstÃ¡s seguro?' }, class: "btn btn-danger" %>
							</td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>

		<% if can? :new, Meeting %>
			<%= link_to 'Nueva Meeting', new_meeting_path, class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
