<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <h1><%= format_meeting_name(@meeting) %></h1>

    <p>
      <strong><%= t(:date) %>:</strong>
      <%= l Date.parse(@meeting.date.to_s) %>
    </p>

    <p>
      <strong><%= t(:group) %>:</strong>
      <%= link_to @meeting.group.name, @meeting.group %>
    </p>

    <p>
      <strong><%= t(:description) %>:</strong>
      <%= @meeting.desc %>
    </p>

    <% if can? :edit, @user %>
      <%= link_to t(:edit), edit_meeting_path(@meeting), class: "btn btn-primary" %>
    <% end %>

    <h2><%= t(:attendants) %></h2>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th><%= t(:name).titleize %></th>
        </tr>
      </thead>

      <tbody>
        <% @meeting.users.each do |user| %>
          <tr>
            <td>
              <%= link_to user.name, user %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if current_user.admin? || current_user.aterritories.include?(@meeting.group) %>
      <%= form_for UserMeeting.new, html: {class: "form-inline"} do |f| %>
        <%= f.hidden_field :meeting_id, value: @meeting.id %>
        <div class="form-group">
          <label class="sr-only"><%= t(:name).titleize %></label>
          <select name="user_meeting[user_id]" class="form-control">
            <option value="nil"><%= t(:select_user).titleize %></option>
            <% @meeting.group.members.each do |user| %>
              <% if !@meeting.users.include?(user) %>
                <option value="<%= user.id %>"><%= user.name %></option>
              <% end %>
            <% end %>
          </select>
        </div>
        <div class="form-group">
          <%= f.submit t(:create).titleize, class: "btn btn-primary" %>
        </div>
      <% end %>
    <% end %>


  </div>
</div>
