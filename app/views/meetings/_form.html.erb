<%= form_for @meeting, html: {class: "form-horizontal"} do |f| %>

  <% if @meeting.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@meeting.errors.count, "error") %> impidieron que se grabara la reuni√≥ns:</h2>

      <ul>
      <% @meeting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :date, :order => [:year, :month, :day], class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :territory_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <select name="meeting[territory_id]" class="form-control">
        <option value="nil" disabled><%= t(:select_territory).titleize %></option>
        <% Territory.all.each do |territory| %>
          <% if current_user.admin? || current_user.aterritories.include?(territory) %>
            <option value="<%= territory.id %>"><%= territory.name %></option>
          <% else %>
            <option value="<%= territory.id %>"><%= territory.name %></option>
          <% end %>
        <% end %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :desc, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :desc, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit t(:create).titleize, class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
