<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <h1><%= t(:signin).humanize %></h1>

    <%= form_for :session, url: sessions_path, html: {class: "form-horizontal"} do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :email, class: "form-control", placeholder: t(:email).humanize %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :session_password, t(:password).humanize, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control", placeholder: t(:password).humanize %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit t(:signin).humanize, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
