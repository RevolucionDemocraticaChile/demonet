<div class="container">
  <ol class="breadcrumb">
    <li > <%= link_to t(:meetings).humanize, meetings_path %> </li>
    <li class="active"> <%= t(:list).humanize %></li>
  </ol>

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading clearfix">
          <h4><%= t(:meetings).humanize %></h4>
          <div class="pull-right">
            <% if can? :new, Meeting %>
              <%= link_to t(:new_meeting).humanize, new_meeting_path, class: "pull-right btn btn-primary btn-sm" %>
            <% end %>
          </div>
        </div>
        <div class="panel-body">
            <table id="datatable" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th><%= t(:title).humanize %></th>
                  <th><%= t(:group).humanize %></th>
                  <th><%= t(:attendants).humanize %></th>
                  <th><%= t(:date_lit).humanize %></th>
                </tr>
              </thead>

              <tbody>
                <% @meetings.each do |meeting| %>
                  <tr>
                    <td>
                      <%= link_to format_meeting_name(meeting), meeting %>
                    </td>
                    <td>
                      <% meeting.groups.each do |group| %>
                        <%= link_to group.name, group %>
                      <% end %>
                    </td>

                    <td class="text-center">
                      <%= meeting.users.count %>
                    </td>
                    <td>
                      <%= l Date.parse(meeting.date.to_s) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>

          </div>
        </div>
      </div>
    </div>
  </div>

<script>
  $(function() {
    $('#datatable').DataTable({
      "sDom": '<"pull-left"T>frt<"widget-foot" <"info_table pull-left"i><"pagination pull-right"p><"clearfix">>',
      "tableTools": {
        "sRowSelect": "multi",
        "sSwfPath": "swf/copy_csv_xls.swf",
        "aButtons": [{
          "sExtends": "csv",
          "sButtonText": "Exportar Todo CSV",

        },
        ]},
        "oLanguage": {
          "sSearch": "Filtrar: ",
          "sZeroRecords": "No se encontraron reuniones",
          "sInfo": "Mostrando _START_ a _END_ reuniones de un total de _TOTAL_ ",
          "sInfoEmpty": "Mostrando 0 a 0 reuniones de un total de 0",
          "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
          "oPaginate": {
            "sNext": "Siguiente <span class='glyphicon glyphicon-chevron-right'></span>",
            "sPrevious": "<span class='glyphicon glyphicon-chevron-left'></span> Anterior",
          }
        }
    });
  });
</script>
