<%= form_for @group, html: { class: "form-horizontal" } do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@group.errors.count, "error") %>:</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag :group_name, t(:name).humanize, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: t(:name).humanize %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :group_desc, t(:description).humanize, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_area_tag :group_desc, nil, name: "group[desc]", class: "form-control", placeholder: t(:description).humanize %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :group_type, t(:type).humanize, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <select name="group[type]" class="form-control">
        <option value="Territory"><%= t(:territory).humanize %></option>
        <option value="Comission"><%= t(:comission).humanize %></option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit t(:create).humanize, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
