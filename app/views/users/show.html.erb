<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <h1>Perfil: <%= @user.name %></h1>

    <p>
      <strong>Username:</strong>
      <%= @user.username %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>

    <% if can? :edit, @user %>
      <%= link_to 'Editar', edit_user_path(@user) %>
    <% end %>

    <h2>Territorios</h2>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <th class="text-center">Admin</th>
        </tr>
      </thead>

      <tbody>
        <% @user.territorios.each do |territorio| %>
          <tr>
            <td><%= link_to territorio.name, territorio %></td>
            <td class="text-center">
              <% if @user.aterritorios.include?(territorio) %>
                <span class="glyphicon glyphicon-ok"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>


  </div>
</div>
