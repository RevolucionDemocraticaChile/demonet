<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <h1>Perfil: <%= @user.name %></h1>

    <p>
      <strong>Username:</strong>
      <%= @user.username %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>

    <% if can? :edit, @user %>
      <%= link_to 'Editar', edit_user_path(@user), class: "btn btn-primary" %>
    <% end %>

    <h2>Territorios</h2>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <% if current_user.admin? %>
            <th></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @user.member_territorios.each do |member_territorio| %>
        <% territorio = member_territorio.territorio %>
          <tr>
            <td>
              <%= link_to territorio.name, territorio %><% if @user.aterritorios.include?(territorio) %> <strong>(admin)</strong><% end %>
            </td>
            <% if current_user.admin? %>
              <td class="text-center">
                <%= link_to "Eliminar", member_territorio, method: :delete, data: { confirm: 'EstÃ¡s seguro?' }, class: "btn btn-danger" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if current_user.admin? %>
      <form class="form-inline" role="form">
        <div class="form-group">
          <label class="sr-only" for="exampleInputEmail2">Nombre del Territorio</label>
          <select class="form-control">
            <% Territorio.all.each do |territorio| %>
            <option><%= territorio.name %></option>
            <% end %>
          </select>
        </div>

        <%= link_to "Agregar Territorio", '#', class: "btn btn-primary" %>
      </form>
    <% end %>


  </div>
</div>
