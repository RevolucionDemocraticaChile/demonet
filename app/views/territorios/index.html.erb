<div class="row">
	<div class="col-lg-8 col-lg-offset-2">
		<h1>Territorios</h1>

		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Nombre</th>
					<th colspan="2"></th>
				</tr>
			</thead>

			<tbody>
				<% @territorios.each do |territorio| %>
					<tr>
						<td><%= link_to territorio.name, territorio %></td>
						<td>
							<% if can? :edit, territorio %>
								<%= link_to 'Editar', edit_territorio_path(territorio) %>
							<% end %>
						</td>
						<td>
							<% if can? :destroy, territorio %>
								<%= link_to 'Eliminar', territorio, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>

		<br>

		<% if can? :new, Territorio %>
			<%= link_to 'Nuevo Territorio', new_territorio_path %>
		<% end %>
	</div>
</div>
