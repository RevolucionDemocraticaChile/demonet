<div class="row">
  <div class="col-lg-12">
    <h1><%= format_meeting_name(@meeting) %></h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-2">
    <% if can?(:edit, @meeting) || can?(:destroy, @meeting) %>
      <div class="alert alert-info admin-panel">
        <strong><%= t(:administration).humanize %></strong>
        <% if can?(:edit, @meeting) %>
          <%= link_to t(:edit_meeting).humanize, edit_meeting_path(@meeting), class: "btn btn-primary" %>
        <% end %>
        <% if can?(:destroy, @meeting) %>
          <%= link_to t(:destroy_meeting).humanize, meeting_path(@meeting), method: :delete, class: "btn btn-danger" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="col-lg-8">

    <p>
      <strong><%= t(:description).humanize %>:</strong>
      <%= @meeting.desc %>
    </p>

    <h2><%= t(:attendants).humanize %></h2>

    <table class="table table-striped table-bordered">
      <tbody>
        <% @meeting.users.each do |user| %>
          <tr>
            <td>
              <%= link_to user.name, user %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if current_user.admin? %>
      <%= form_for UserMeeting.new, html: {class: "form-inline"} do |f| %>
        <%= f.hidden_field :meeting_id, value: @meeting.id %>
        <div class="form-group">
          <label class="sr-only"><%= t(:name).humanize %></label>
          <select name="user_meeting[user_id]" class="form-control">
            <option value="nil"><%= t(:select_user).humanize %></option>
            <% @meeting.users.each do |user| %>
              <% if !@meeting.users.include?(user) %>
                <option value="<%= user.id %>"><%= user.name %></option>
              <% end %>
            <% end %>
          </select>
        </div>
        <div class="form-group">
          <%= f.submit t(:add).humanize, class: "btn btn-primary" %>
        </div>
      <% end %>
    <% end %>


  </div>
</div>
