<div class="container">

  <div class="row">
    <div class="col-lg-12">
      <h1>
        <%= format_group_name(@group) %>
      </h1>
    </div>
  </div>


  <div class="row">
    <div class="col-lg-offset-2 col-lg-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">Información</h2>
        </div>
        <table class="table">
          <tbody>
            <tr>
              <td class="text-right">
                <strong>Tipo:</strong>
              </td>
              <td>
                <%= format_group_type(@group) %>
              </td>
            </tr>
            <tr>
              <td class="text-right">
                <strong>Nombre:</strong>
              </td>
              <td>
                <%= format_group_name(@group) %>
              </td>
            </tr>
            <tr>
              <td class="text-right">
                <strong>Moderadores:</strong>
              </td>
              <td>
                <% @group.admin_groups.each do |admin_group| %>
                  <%= link_to format_user_name(admin_group.user), admin_group.user %><br />
                <% end %>
              </td>
            </tr>
            <tr>
              <td class="text-right">
                <strong>Miembros:</strong>
              </td>
              <td>
                <% @group.member_groups.each do |member_group| %>
                  <%= link_to format_user_name(member_group.user), member_group.user %>,
                <% end %>
              </td>
            </tr>
            <tr>
              <td class="text-right">
                <strong>Descripción:</strong>
              </td>
              <td>
                <%= @group.desc %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-offset-2 col-lg-8">
      <div class="panel panel-default">
        <div class="panel-heading clearfix">
          <h2 class="panel-title"><%= t(:recent_meetings).humanize %></h2>
        </div>

        <table class="table">
          <tbody>
            <% @meetings.each do |meeting| %>
              <tr>
                <td>
                  <%= link_to format_meeting_name(meeting), meeting %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <% if current_user.admin_groups.include?(@group) || current_user.admin? %>
  <!-- <div class="row">
    <div class="col-lg-offset-2 col-lg-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">Miembros Activos</h2>
        </div>

        <table class="table">
          <tbody>
            <% @group.meetings.where() %>
          </tbody>
        </table>
      </div>
    </div>
  </div> -->
  <% end %>

</div>
