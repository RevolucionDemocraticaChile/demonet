<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <h1><%= t(:territories).humanize %></h1>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th><%= t(:name).humanize %></th>
          <th><%= t(:members).humanize %></th>
          <th><%= t(:meetings).humanize %></th>
        </tr>
      </thead>

      <tbody>
        <% @territories.each do |territory| %>
          <tr>
            <td><%= link_to territory.name, territory %></td>
            <td class="text-center"><%= territory.members.count %></td>
            <td class="text-center"><%= territory.meetings.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if can? :new, Territory %>
      <%= link_to t(:new_territory).humanize, new_territory_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
