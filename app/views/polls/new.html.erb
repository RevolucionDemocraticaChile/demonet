<div class="container">

  <div class="row">
    <div class="col-md-offset-1 col-md-10">

      <div class="panel panel-default">
        <div class="panel-heading clearfix">
          <% if action_name == 'new' %>
            <h2 class="panel-title"><%= t(:new_poll).humanize %></h2>
          <% else %>
            <h2 class="panel-title"><%= t(:edit_poll).humanize %></h2>
          <% end %>
        </div>

        <div class="panel-body">
          <%= form_for @poll, html: {class: "form-horizontal"} do |f| %>

            <% if @poll.errors.any? %>
              <div id="error_explanation" class="alert alert-danger alert-dismissible" role="alert">
                <h2>
                  <%= pluralize(@poll.errors.count, "error") %> impidieron que se grabara la <%= t(:poll) %>:
                </h2>
                <ul>
                  <% @poll.errors.full_messages.each do |poll| %>
                    <li><%= poll %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label t(:start_date).humanize, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.date_select :start, :order => [:year, :month, :day], class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label t(:finish_date).humanize, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.date_select :finish, :order => [:year, :month, :day], class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label t(:name).humanize, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label t(:description).humanize, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_area :description, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit t(:save).humanize, class: "btn btn-primary" %>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
