<div class="container">
  <ol class="breadcrumb">
    <li > <%= link_to t(:meetings).humanize, meetings_path %> </li>
    <li class="active"> <%= t(:list).humanize %></li>
  </ol>

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading clearfix">
          <h4><%= t(:meetings).humanize %></h4>
          <div class="pull-right">
            <% if can? :new, Meeting %>
              <%= link_to t(:new_meeting).humanize, new_meeting_path, class: "pull-right btn btn-primary btn-sm" %>
            <% end %>
          </div>
        </div>
        <div class="panel-body">
          <table class="table">
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th><%= t(:title).humanize %></th>
                  <th><%= t(:group).humanize %></th>
                  <th><%= t(:attendants).humanize %></th>
                  <th><%= t(:date_lit).humanize %></th>
                </tr>
              </thead>

              <tbody>
                <% @meetings.each do |meeting| %>
                  <tr>
                    <td>
                      <%= link_to format_meeting_name(meeting), meeting %>
                    </td>
                    <td>
                      <% meeting.groups.each do |group| %>
                        <%= link_to group.name, group %>
                      <% end %>
                    </td>

                    <td class="text-center">
                      <%= meeting.users.count %>
                    </td>
                    <td>
                      <%= l Date.parse(meeting.date.to_s) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>

          </div>
        </div>
      </div>
    </div>
  </div>
