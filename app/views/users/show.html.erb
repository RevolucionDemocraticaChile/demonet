<div class="row">
  <div class="col-lg-12">
    <h1 class="text-center">
      <%= gravatar_for @user %>
      <%= @user.name %>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-3 text-center">
    <% if @user.admin? %>
      <div class="alert alert-danger text-center" style="position: relative;">
        <span class="glyphicon glyphicon-flash" > <strong>Administrador</strong>
      </div>
    <% end %>
    <% if recent_attendance_for(@user) >= 6 %>
      <div class="alert alert-success text-center">
        <strong>Miembro Activo</strong>
      </div>
    <% else %>
      <div class="alert alert-warning text-center">
        <strong>Miembro Adherente</strong>
      </div>
    <% end %>
    <hr />
    <% @user.territories.each do |territory| %>
      <div class="alert alert-info text-center">
        Miembro del Territorio<br />
        <strong><%= link_to territory.name, territory %></strong>
      </div>
    <% end %>
    <% if current_user.admin? %>
      <%= link_to "Agregar usuario a otro Territorio", new_member_territory_path, class: "btn btn-primary" %>
    <% end %>
    <hr />
  </div>
  <div class="col-lg-6">

    <p>
      Actas recientes: <%= @user.meetings.where(date: (DateTime.now-6.months)..(DateTime.now)).count %>
    </p>

    <p>
      <strong>Username:</strong>
      <%= @user.username %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <% if can? :edit, @user %>
      <%= link_to 'Editar', edit_user_path(@user), class: "btn btn-primary" %>
    <% end %>

    <h2>Territorios</h2>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <% if current_user.admin? %>
            <th></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @user.member_territories.each do |member_territory| %>
        <% territory = member_territory.territory %>
          <tr>
            <td>
              <%= link_to territory.name, territory %><% if @user.aterritories.include?(territory) %> <strong>(admin)</strong><% end %>
            </td>
            <% if current_user.admin? %>
              <td class="text-center">
                <%= link_to "Eliminar", member_territory, method: :delete, data: { confirm: 'EstÃ¡s seguro?' }, class: "btn btn-danger" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>


    <% if current_user.admin? %>
      <%= form_for @member_territory, html: { class: "form-inline" } do |f| %>
        <%= f.hidden_field :user_id, value: @user.id %>
        <div class="form-group">
          <label class="sr-only">Nombre del Territorio</label>
          <select name="member_territory[territory_id]" class="form-control">
            <% Territory.all.each do |territory| %>
              <% if !@user.territories.include?(territory) %>
                <option value="<%= territory.id %>"><%= territory.name %></option>
              <% end %>
            <% end %>
          </select>
        </div>
        <%= f.submit "Agregar Territorio", class: "btn btn-primary" %>
      <% end %>
    <% end %>


    <h2>Actas</h2>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Acta</th>
        </tr>
      </thead>

      <tbody>
        <% @user.meetings.each do |meeting| %>
          <tr>
            <td>
              <%= link_to format_meeting_name(meeting), meeting %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
