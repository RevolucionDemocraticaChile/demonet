<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <h1><%= t(:territory).titleize %>: <%= @territory.name %></h1>

    <p>
      <strong><%= t(:name).titleize %>:</strong>
      <%= @territory.name %>
    </p>

    <% if can? :edit, @territory %>
      <%= link_to t(:edit).titleize, edit_territory_path(@territory), class: "btn btn-primary" %>
    <% end %>

    <h2><%= t(:members).titleize %></h2>

    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t(:name).titleize %></th>
          <th><%= t(:email).titleize %></th>
          <% if current_user.admin? || current_user.aterritories.include?(@territory) %>
            <th></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @territory.members.each do |member| %>
          <tr>
            <td>
              <%= link_to member.name, member %><% if @territory.admins.include?(member) %> <strong>(admin)</strong><% end %>
            </td>
            <td><%= member.email %></td>
            <% if current_user.admin? || current_user.aterritories.include?(@territory) %>
              <td class="text-center">
                <%= link_to t(:destroy).titleize, '#', class: "btn btn-danger" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if current_user.admin? || current_user.aterritories.include?(@territory) %>
      <%= form_for MemberTerritory.new, html: { class: "form-inline" } do |f| %>
        <%= f.hidden_field :territory_id, value: @territory.id %>
        <div class="form-group">
          <label class="sr-only"><%= t(:name).titleize %></label>
          <select name="member_territory[user_id]" class="form-control">
            <% User.all.each do |user| %>
              <% if !@territory.members.include?(user) %>
                <option value="<%= user.id %>"><%= user.name %></option>
              <% end %>
            <% end %>
          </select>
        </div>
        <%= f.submit t(:add_member).titleize, class: "btn btn-primary" %>
      <% end %>
    <% end %>

    <h2><%= t(:meetings).titleize %></h2>

    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t(:date_lit).titleize %></th>
          <th><%= t(:description).titleize %></th>
        </tr>
      </thead>

      <tbody>
        <% @territory.meetings.order(:date).each do |meeting| %>
          <tr>
            <td>
              <%= link_to format_meeting_name(meeting), meeting %>
            </td>
            <td>
              <%= meeting.desc %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if current_user.admin? || current_user.aterritories.include?(@territory) %>
      <%= link_to t(:add_meeting).titleize, new_meeting_path, class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
