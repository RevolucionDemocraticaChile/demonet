<div class="container">

  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <div class="panel panel-default">
        <div class="panel-heading clearfix">
          <% if action_name == 'new' %>
            <h2 class="panel-title"><%= t(:add_user).humanize %></h2>
          <% else %>
            <h2 class="panel-title"><%= t(:edit_user).humanize %></h2>
          <% end %>
        </div>
        <div class="panel-body">

          <%= form_for @user, html: {class: "form-horizontal"} do |f| %>
            <% if @user.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <h2><%= pluralize(@user.errors.count, "error") %>:</h2>

              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
            <% end %>

            <div class="form-group">
              <%= f.label t(:email), class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.text_field :email, class: "form-control", placeholder: t(:email).humanize, disabled: true %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label 'Nombres', class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.text_field :first_name, class: "form-control", placeholder: t(:first_name).humanize, disabled: true %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label 'Apellidos', class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.text_field :last_name, class: "form-control", placeholder: 'Apellidos', disabled: true %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-4 col-sm-8">
                <small>Estos datos no se pueden cambiar aqu√≠. Si ves un error, por favor contacta al equipo!</small>
              </div>
            </div>

            <hr />

            <div class="form-group">
              <%= f.label t(:display_name), class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.text_field :display_name, class: "form-control", placeholder: t(:display_name).humanize %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label t(:rut), class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.text_field :rut, class: "form-control", placeholder: t(:rut_example).humanize %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label t(:birthdate), class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.date_field :birthdate, class: "form-control", placeholder: t(:birthdate).humanize, include_blank: true %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label t(:city), class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.text_field :city, class: "form-control", placeholder: t(:city).humanize, include_blank: true %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label t(:description), class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.text_area :description, class: "form-control", placeholder: t(:description).humanize, include_blank: true %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label t(:mobile_number), class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.text_field :mobile_number, class: "form-control", placeholder: t(:mobile_number).humanize, include_blank: true %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label t(:twitter_user), class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.text_field :twitter_user, class: "form-control", placeholder: t(:twitter_user).humanize, include_blank: true %>
              </div>
            </div>

            <% if current_user.admin? %>
            <hr />

            <div class="form-group">
              <%= f.label t(:active_member_until), class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.date_field :active_member_until, class: "form-control", include_blank: true %>
              </div>
            </div>
            <% end %>

            <hr />

            <% if action_name != "new" %>
              <div class="form-group">
                <%= f.label t(:password), class: "col-sm-4 control-label" %>
                <div class="col-sm-8">
                  <%= f.password_field :password, class: "form-control", placeholder: t(:password).humanize %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label t(:password_confirmation), class: "col-sm-4 control-label" %>
                <div class="col-sm-8">
                  <%= f.password_field :password_confirmation, class: "form-control", placeholder: t(:password_confirmation).humanize %>
                </div>
              </div>
            <% end %>

            <div class="form-group">
              <div class="col-sm-offset-4 col-sm-8">
                <% if action_name == 'new' %>
                  <%= f.submit t(:create).humanize, class: "btn btn-primary" %>
                <% else %>
                  <%= f.submit t(:send).humanize, class: "btn btn-primary" %>
                <% end%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
