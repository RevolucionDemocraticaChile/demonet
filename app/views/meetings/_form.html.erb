<div class="container">
  <ol class="breadcrumb">
    <li > <%= link_to t(:meetings).humanize, meetings_path %> </li>
    <% if action_name == 'new' %>
      <li class="active"> <%= t(:add).humanize %></li>
    <% else %>
      <li class="active"> <%= t(:edit).humanize %></li>
    <% end %>
  </ol>
  <div class="row">
    <div class="col-lg-12">

      <div class="panel panel-default">
        <div class="panel-heading clearfix">
          <% if action_name == 'new' %>
            <h4><%= t(:add_meeting).humanize %></h4>
          <% else %>
            <h4><%= t(:edit_meeting).humanize %></h4>
          <% end %>
        </div>
        <div class="panel-body">

          <%= form_for @meeting, html: {class: "form-horizontal"} do |f| %>

            <% if @meeting.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <h2><%= pluralize(@meeting.errors.count, "error") %> impidieron que se grabara la reuni√≥ns:</h2>

                <ul>
                  <% @meeting.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label t(:date_lit).humanize, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.date_select :date, :order => [:year, :month, :day], class: "form-control" %>
              </div>
            </div>
            <!-- <div class="form-group">
              <%= label_tag :group_id, t(:group).humanize, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <select name="meeting[group_id]" class="form-control">
                  <% current_user.agroups.each do |group| %>
                    <option value="<%= group.id %>"><%= group.name %></option>
                  <% end %>
                </select>
              </div>
            </div> -->
            <div class="form-group">
              <%= f.label t(:description).humanize, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_area :desc, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit t(:save).humanize, class: "btn btn-primary" %>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
